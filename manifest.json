{
  "manifest_version": 3,
  "name": "TabCloser",
  "version": "2.4.0",
  "description": "Automatically close redirected tabs for Asana, Discord, Figma, Notion, Spotify, VS Code, Webex, and Zoom.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}