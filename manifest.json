{
  "manifest_version": 3,
  "name": "TabCloser",
  "version": "1.0.0",
  "description": "Automatically close redirected Figma, Zoom, Spotify, and VS Code Live Share tabs.",
  "permissions": ["tabs"],
  "action": {
    "default_icon": {
      "512": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "512": "icon.png"
  }
}